{
  "name": "ru-bot",
  "version": "0.1.0",
  "description": "Telegram bot to manage spam and rules for @_ru community",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test:lint",
    "test:lint": "eslint src",
    "dev": "nodemon --config ./nodemon.json",
    "start": "NODE_ENV=production node --experimental-modules ./src/index.mjs",
    "migrate": "sequelize db:migrate",
    "rollback": "sequelize db:migrate:undo",
    "prepush": "npm run test:lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/telegram-ru/ru_bot.git"
  },
  "keywords": [
    "telegram",
    "bot"
  ],
  "engines": {
    "node": ">=10.9.0"
  },
  "author": "Sergey Sova <mail@sergeysova.com> (https://sergeysova.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/telegram-ru/ru_bot/issues"
  },
  "homepage": "https://github.com/telegram-ru/ru_bot#readme",
  "devDependencies": {
    "@atomix/eslint-config": "^6.4.0",
    "codecov": "^3.0.4",
    "cz-customizable": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-plugin-unicorn": "^6.0.1",
    "faker": "^4.1.0",
    "glob": "^7.1.3",
    "husky": "^0.14.3",
    "nodemon": "^1.18.4",
    "ramda.pipe": "^0.25.0",
    "sequelize-cli": "^4.1.1",
    "sinon": "^6.1.5",
    "supports-color": "^5.5.0"
  },
  "dependencies": {
    "@sentry/node": "^4.0.0-beta.12",
    "debug": "^3.1.0",
    "dotenv": "^6.0.0",
    "elasticsearch": "^15.1.1",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.38.0",
    "telegraf": "^3.23.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
